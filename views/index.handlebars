<div class="container">

    <div class="carousel carousel-slider center signup">
        <div class="carousel-fixed-item">
            <div class="carousel-title-container">
                <div class="card carousel-title">
                    <h3 class="center">{{categoryString}}</h3>
                </div>
            </div>

        </div>
        <div
            class="carousel-item red white-text"
            href="#one!"
        >
            <img
                class="carousel-img"
                src="/assets/img/cheeseBurger.jpg"
            />
        </div>
        <div
            class="carousel-item amber white-text"
            href="#two!"
        >
            <img
                class="carousel-img"
                src="/assets/img/chickenBurger.jpg"
            />
        </div>
        <div
            class="carousel-item green white-text"
            href="#three!"
        >
            <img
                class="carousel-img"
                src="/assets/img/placeholder.png"
            />
        </div>
        <div
            class="carousel-item blue white-text"
            href="#four!"
        >
            <img
                class="carousel-img"
                src="/assets/img/placeholder.png"
            />
        </div>
    </div>



    <ul class="pagination center">
        <li class="disabled"><a href="#!"><i class="material-icons">chevron_left</i></a></li>
        {{#each pages}}
        <li class="{{active}}"><a onclick="handlePage('{{page}}')">{{page}}</a></li>
        {{/each}}
        <li class="disabled"><a href="#!"><i class="material-icons">chevron_right</i></a></li>
    </ul>
    <div class="row">
        {{#each products}}
        <div class="col s12 m3">
            <div class="card hoverable">
                <div class="card-image hoverable waves-effect waves-block waves-light">
                    <a onclick="handleProduct('{{id}}')">
                        <img
                            class="activator img"
                            src="/assets/img/{{img}}"
                        >
                    </a>
                </div>
                <div class="card-content">
                    <span class="card-title truncate">{{product_name}}</span>
                    <span class="pink-text card-price">{{{price}}}</span>
                    <p class="trunc">{{description}}</p>
                </div>
                <div class="card-action">
                    <a onclick="orderItem({{id}},'{{product_name}}')">
                        Order
                    </a>

                </div>
            </div>
        </div>
        {{/each}}
    </div>
    <ul class="pagination center">
        <li class="disabled"><a href="#!"><i class="material-icons">chevron_left</i></a></li>
        {{#each pages}}
        <li class="{{active}}"><a onclick="handlePage('{{page}}')">{{page}}</a></li>
        {{/each}}
        <li class="disabled"><a href="#!"><i class="material-icons">chevron_right</i></a></li>
    </ul>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/assets/js/carousel.js"></script>