<div class="slideshow-container z-depth-3">

    <div class="mySlides fade grey-text">
        <div class="numbertext black-text">1 / 3</div>
        <img>
        <div class="center">
            <h1>Welcome</h1>
        </div>
        <div class="center">
            <h1>Logo</h1>
        </div>
    </div>

    <div class="mySlides fade">
        <div class="numbertext black-text">2 / 3</div>
        <img class="carousel-img" src="/assets/img/placeholder.png" />
    </div>

    <div class="mySlides fade">
        <div class="numbertext black-text">3 / 3</div>
        <img class="carousel-img" src="/assets/img/placeholder1.png" />
    </div>

</div>
<br>

<div style="text-align:center">
    <span class="dot"></span>
    <span class="dot"></span>
    <span class="dot"></span>
</div>

<div class="container">
    <ul class="pagination center">
        <li class="disabled"><a href="#!"><i class="material-icons">chevron_left</i></a></li>
        {{#each pages}}
        <li class="{{active}}"><a href="#!" onclick="
                handlePage('{{page}}')">{{page}}</a></li>
        {{/each}}
        <li class="disabled"><a href="#!"><i class="material-icons">chevron_right</i></a></li>
    </ul>
    <div class="row">
        {{#each products}}
        <div class="col s12 m6 xl3">
            <div class="card hoverable">
                <div class="card-image hoverable waves-effect waves-block waves-light">
                    <a onclick="handleProduct('{{id}}')">
                        <img class="activator img" src="/assets/img/{{img}}">
                    </a>
                </div>
                <div class="card-content">
                    <span class="card-title truncate">{{product_name}}</span>
                    <span class="pink-text card-price">{{{price}}}</span>
                    <p class="trunc">{{description}}</p>
                </div>
                <div class="card-action">
                    <a href="#!" onclick="orderItem({{id}},'{{product_name}}')">
                        Order
                    </a>

                </div>
            </div>
        </div>
        {{/each}}
    </div>
    <ul class="pagination center">
        <li class="disabled"><a href="#!"><i class="material-icons">chevron_left</i></a></li>
        {{#each pages}}
        <li class="{{active}}"><a href="#!" onclick="handlePage('{{page}}')">{{page}}</a></li>
        {{/each}}
        <li class="disabled"><a href="#!"><i class="material-icons">chevron_right</i></a></li>
    </ul>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/assets/js/carousel.js"></script>